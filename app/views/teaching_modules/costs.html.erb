<h1>Coûts</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Coût CM</th>
      <th>Coût TD</th>
      <th>Coût TP</th>
      <th>Coût total</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= Semester.planned_teacher_hours_cm_costs.round %>€</td>
      <td><%= Semester.planned_teacher_hours_td_costs.round %>€</td>
      <td><%= Semester.planned_teacher_hours_tp_costs.round %>€</td>
      <td><%= Semester.planned_teacher_hours_costs.round %>€</td>
    </tr>
  </tbody>
<table>

<% @semesters.each do |semester| %>
  <h2><%= semester %></h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Coût CM</th>
        <th>Coût TD</th>
        <th>Coût TP</th>
        <th>Coût total</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= semester.planned_teacher_hours_cm_costs.round %>€</td>
        <td><%= semester.planned_teacher_hours_td_costs.round %>€</td>
        <td><%= semester.planned_teacher_hours_tp_costs.round %>€</td>
        <td><%= semester.planned_teacher_hours_costs.round %>€</td>
      </tr>
    </tbody>
  <table>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Coût CM</th>
        <th>Coût TD</th>
        <th>Coût TP</th>
        <th>Coût total</th>
        <th>Heures étudiant PPN</th>
        <th>Coût / heure étudiant</th>
      </tr>
    </thead>
    <tbody>
      <% semester.teaching_modules.each do |teaching_module| %>
        <tr>
          <td><%= link_to teaching_module.full_name, teaching_module %></td>
          <td><%= teaching_module.planned_teacher_hours_cm_costs.round %>€</td>
          <td><%= teaching_module.planned_teacher_hours_td_costs.round %>€</td>
          <td><%= teaching_module.planned_teacher_hours_tp_costs.round %>€</td>
          <td><%= teaching_module.planned_teacher_hours_costs.round %>€</td>
          <td><%= teaching_module.expected_student_hours %></td>
          <td><%= teaching_module.cost_per_student_hour %>€</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>