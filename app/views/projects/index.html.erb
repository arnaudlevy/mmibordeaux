<div class="projects-timeline">
  <table>
    <tr>
      <th></th>
      <% Semester.all.each do |semester| %>
        <th><%= semester %></td>
      <% end %>
    </tr>
  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project, project %></td>
      <% Semester.all.each do |semester| %>
        <td<% if project.semesters.include?(semester) %> class="active" <% end %>><span></span></td>
      <% end %>
    </tr>
  <% end %>
  </table>
</div>

<h1><%= @projects.count %> projets</h1>
<%= link_to 'Nouveau projet', new_project_path %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Label</th>
      <th>Semestres</th>
      <th>Champs</th>
      <th>Modules</th>
      <th>Personnes</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project, project %></td>
        <td><%= render partial: 'semesters/inline_list', locals: {semesters: project.semesters} %></td>
        <td><%= render partial: 'fields/inline_list', locals: {fields: project.fields} %></td>
        <td><%= render partial: 'teaching_modules/inline_list', locals: {teaching_modules: project.teaching_modules} %></td>
        <td><%= render partial: 'users/inline_list', locals: {users: project.users} %></td>
      </tr>
    <% end %>
  </tbody>
</table>