<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <div class="row">
      <div class="col-md-4">
        <%= f.input :email, as: :email %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :admin if current_user.admin? %>
        <%= f.input :hours %>
        <%= f.input :public %>
        <%= f.input :tenured %>
      </div>
      <div class="col-md-4">
        <%= f.input :teaching_modules, as: :check_boxes %>
      </div>
      <div class="col-md-4">
        <%= f.input :fields, as: :check_boxes, collection: Field.not_root %>
        <%= f.input :projects, as: :check_boxes %>
      </div>
    </div>
  <% end %>
  <%= f.submit 'Enregistrer', class: 'btn btn-default' %>
<% end %>
