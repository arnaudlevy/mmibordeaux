<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :hours %>
    <%= f.input :tenured, label: 'Titulaire' %>
    <%= f.input :teaching_modules, as: :check_boxes, label: 'Responsable des modules' %>
    <%= f.input :projects, as: :check_boxes, label: 'Projets' %>
  <% end %>
  <%= f.actions %>
<% end %>
