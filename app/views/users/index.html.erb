<p id="notice"><%= notice %></p>

<h1>Equipe</h1>

<h2>Heures</h2>
<p>Heures des titulaires : <%= @tenured_hours %></p>
<p>Heures restantes : <%= @remaining_hours %></p>

 <%= pie_chart User.group(:tenured).count %>

<h2><%= @users.count %> personnes</h2>
<%= link_to 'Nouvelle personne', new_user_path %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Heures</th>
      <th>Titulaire</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user, user %></td>
        <td><%= user.hours %></td>
        <td><%= user.tenured %></td>
      </tr>
    <% end %>
  </tbody>
</table>
