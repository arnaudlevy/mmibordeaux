<p id="notice"><%= notice %></p>

<h1><%= @semesters.count %> semestres</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @semesters.each do |semester| %>
      <tr>
        <td><%= link_to semester, semester %></td>
        <td><%= link_to 'Show', semester %></td>
        <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
