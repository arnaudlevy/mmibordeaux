<%= semantic_form_for @field do |f| %>
  <%= f.inputs do %>
    <%= f.input :label %>
    <%= f.input :color %>
    <%= f.input :parent %>
    <%= f.input :position %>
    <%= f.input :teaching_modules, as: :check_boxes, label: 'Modules' %>
    <%= f.input :users, as: :check_boxes, label: 'Personnes' %>
  <% end %>
  <%= f.actions %>
<% end %>
